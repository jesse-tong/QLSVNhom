<Window x:Class="QLSVNhom.AddClassDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Class" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="MALOP:" />
            <TextBox x:Name="txtMALOP" Margin="0,0,0,10" />
            <TextBlock Text="TENLOP:" />
            <TextBox x:Name="txtTENLOP" Margin="0,0,0,10" />
            <Button Content="Add" Click="Add_Click" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</Window>
